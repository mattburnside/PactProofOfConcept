{
  "consumer": {
    "name": "webapp"
  },
  "provider": {
    "name": "webapi"
  },
  "interactions": [
    {
      "description": "a valid login request",
      "request": {
        "method": "POST",
        "path": "/api/authentication/login",
        "headers": {
          "Accept": "application/json",
          "Content-Type": "application/json"
        },
        "body": {
          "username": "testuser",
          "password": "testpassword"
        }
      },
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json; charset=utf-8"
        },
        "body": {
          "username": "testuser"
        }
      }
    },
    {
      "description": "an invalid login request",
      "request": {
        "method": "POST",
        "path": "/api/authentication/login",
        "headers": {
          "Accept": "application/json",
          "Content-Type": "application/json"
        },
        "body": {
          "username": "invalid",
          "password": "invalid"
        }
      },
      "response": {
        "status": 401,
        "headers": {
          "Content-Type": "application/json; charset=utf-8"
        }
      }
    },
    {
      "description": "a GET request for a heartbeat",
      "request": {
        "method": "GET",
        "path": "/api/heartbeat"
      },
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "text/plain; charset=utf-8"
        },
        "body": "API is responding"
      }
    }
  ],
  "metadata": {
    "pactSpecification": {
      "version": "2.0.0"
    }
  }
}