{
  "consumer": {
    "name": "consoleapp"
  },
  "provider": {
    "name": "webapi"
  },
  "interactions": [
    {
      "description": "A valid login request",
      "request": {
        "method": "post",
        "path": "/api/authentication/login",
        "headers": {
          "content-type": "application/json; charset=utf-8"
        },
        "body": {
          "username": "testuser",
          "password": "testpassword"
        }
      },
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json; charset=utf-8"
        },
        "body": {
          "username": "testuser"
        }
      }
    },
    {
      "description": "A heartbeat request",
      "request": {
        "method": "get",
        "path": "/api/heartbeat"
      },
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "text/plain; charset=utf-8"
        },
        "body": "API is responding",
        "matchingRules": {
          "$.body": {
            "match": "regex",
            "regex": "^API is responding$"
          }
        }
      }
    }
  ],
  "metadata": {
    "pactSpecification": {
      "version": "2.0.0"
    }
  }
}